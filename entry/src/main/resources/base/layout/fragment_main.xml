<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/hap/res-auto"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:text_one"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="15vp"
            ohos:text="$string:default_theme"
        />

        <Text
            ohos:id="$+id:text_two"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="15vp"
            ohos:text="$string:defined_fontpath_view"
        />

        <Text
            ohos:id="$+id:text_three"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="16vp"
            ohos:text="$string:defined_fontpath_view_theme_attr"
            />
        <Text
            ohos:id="$+id:text_four"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="16vp"
            ohos:multiple_lines="true"
            ohos:text="$string:defined_incorrect"
            />
        <Text
            ohos:id="$+id:text_five"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="15fp"
            ohos:text_size="15vp"
            ohos:text="$string:defined_in_style"
            />
        <Text
            ohos:id="$+id:text_six"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="17vp"
            ohos:multiple_lines="true"
            ohos:text="$string:defined_in_appears_style"
            />
        <Text
            ohos:id="$+id:text_seven"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:multiple_lines="true"
            ohos:text_size="19vp"
            ohos:text="$string:text_appearance"
            />
        <Text
            ohos:id="$+id:text_eight"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="19vp"
            ohos:text="$string:defined_in_appears"
            />
        <Text
            ohos:id="$+id:text_nine"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="20vp"
            ohos:text="$string:defined_in_appears_caps"
            />
        <Text
            ohos:id="$+id:text_ten"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="15vp"
            ohos:text="$string:defined_custom_view"
            />
        <Text
            ohos:id="$+id:text_eveven"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="15vp"
            ohos:text="$string:defined_text"
            />
        <Text
            ohos:id="$+id:text_tweleve"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="16vp"
            ohos:text="$string:font_path_declared"
            />
        <Text
            ohos:id="$+id:text_last"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="25vp"
            ohos:text="$string:last_one"/>

        <Checkbox
            ohos:id="$+id:check_box"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="25vp"
            ohos:check_element="$graphic:checkbox_check_element"
            ohos:text="$string:check_box_text"/>
       <TextField
           ohos:id="$+id:text_field"
           ohos:height="match_parent"
           ohos:width="match_parent"
           ohos:bottom_margin="16fp"
           ohos:top_margin="16fp"
           ohos:text_size="25vp"
           ohos:hint="$string:last_text"/>
        <Text
            ohos:id="$+id:last_text"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="16vp"
            ohos:text="$string:text_last"/>
        <Button
            ohos:id="$+id:button_default"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="25vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="$string:button_1"/>
        <Button
            ohos:id="$+id:button_bold"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="25vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="$string:button_2"/>
        <Button
            ohos:id="$+id:load_absolute"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:bottom_margin="16fp"
            ohos:top_margin="16fp"
            ohos:text_size="25vp"
            ohos:right_padding="8vp"
            ohos:left_padding="8vp"
            ohos:background_element="$graphic:background_button"
            ohos:text="$string:button_3"/>
    </DirectionalLayout>
</ScrollView>